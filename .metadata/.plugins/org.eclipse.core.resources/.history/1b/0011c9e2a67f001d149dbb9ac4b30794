import java.awt.Color;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JTextField;

public class Test extends JFrame {
	JButton b[] = new JButton[16];
	String button_str[] = { "7", "8", "9", "/", "4", "5", "6", "x", "1", "2", "3", "-", "0", "C", "=", "+" };
	private JFrame frame;
	private JTextField mainspace;
	
	String mod = "";
	double result;
	double op1;
	double op2;
	int calcase = 0;
	boolean count;

	Test() {
		frame = new JFrame();
		frame.setTitle("Calculate");
		frame.setSize(285, 265);
		// 화면 가운데 띄우기
		frame.setLocationRelativeTo(null);
		// 사이즈 조절 불가능
		frame.setResizable(false);
		// 창을 닫으면 프로그램 종료
		frame.setDefaultCloseOperation(EXIT_ON_CLOSE);
		// 위치 관리자 사용 안함
		frame.setLayout(null);

		// 계산기 상단 화면 생성
		mainspace = new JTextField();
		mainspace.setHorizontalAlignment(JTextField.RIGHT);
		mainspace.setBounds(8, 11, 255, 25);
		mainspace.setBackground(Color.WHITE);
		mainspace.setEditable(false);
		frame.add(mainspace);

		// 버튼 위치 설정
		int a1 = 15;
		int a2 = 15;
		int a3 = 15;
		int a4 = 15;

		for (int i = 0; i < 16; i++) {

			b[i] = new JButton(button_str[i]);
			frame.getContentPane().add(b[i]);

			if (i < 4) {
				b[i].setBounds(a1, 45, 45, 30);
				a1 += 65;
			} else if (i >= 4 && i < 8) {
				b[i].setBounds(a2, 90, 45, 30);
				a2 += 65;
			} else if (i >= 8 && i < 12) {
				b[i].setBounds(a3, 140, 45, 30);
				a3 += 65;
			} else if (i >= 12 && i < 16) {
				b[i].setBounds(a4, 190, 45, 30);
				a4 += 65;
			}
			// 버튼 색상 설정
			if ((i + 1) % 4 == 0) {
				b[i].setBackground(Color.yellow);
				b[i].addActionListener(new ModButton());
			} else {
				b[i].setBackground(Color.gray);
				b[i].addActionListener(new NumberButton());
			}
			// 버튼 클릭시
		}

		frame.setVisible(true);
	}

	class NumberButton implements ActionListener {
		@Override
		public void actionPerformed(ActionEvent e) {
			String button = e.getActionCommand();
			String button_str = mainspace.getText();
			if(button_str.equals("0.0")) {
				mainspace.setText(button);
			}
			else {
				mainspace.setText(button_str + button);
			}
			
			
		}
	}

	class ModButton implements ActionListener {
		@Override
		public void actionPerformed(ActionEvent e) {
			count = true;
			
					// 연산자 입력시 케이스 번호 저장
					if (e.getActionCommand().equals("+")) {
						calcase = 1;
					} else if (e.getActionCommand().equals("-")) {
						calcase = 2;
					} else if (e.getActionCommand().equals("x")) {
						calcase = 3;
					} else if (e.getActionCommand().equals("/")) {
						calcase = 4;
					}

				if (e.getActionCommand().equals("=")) {
				if (calcase == 1) {
					result = op1 + op2;
					mainspace.setText(String.valueOf(result));
				} else if (calcase == 2) {
					result = op1 - op2;
					mainspace.setText(String.valueOf(result));
				} else if (calcase == 3) {
					result = op1 * op2;
					mainspace.setText(String.valueOf(result));
				} else if (calcase == 4) {
					result = op1 / op2;
					mainspace.setText(String.valueOf(result));
				}
			
			} else if (e.getActionCommand().equals("C")) {
				op1 = 0;
				op2 = 0;
				calcase = 0;
				result = 0;
				mainspace.setText("0");
			}
		}

	}

	public static void main(String[] args) {
		new Test();

	}
}
