	String name;
	int num;

	Book() {
	}

	Book(String name, int num) {
		this.name = name;
		this.num = num;
	}

	Book(String name) {
		this.name = name;
	}
	void show() {
		System.out.println("√• ¿Ã∏ß : "+name+num+"∏∂∏Æ");
	}
}

