var name = document.getElementsByName("name");
var pernum1 = document.getElementsByName("pernum1");
var pernum2 = document.getElementsByName("pernum2");
var pw = document.getElementsByName("pw");
var pwcheck = document.getElementsByName("pwcheck");

function checkform() {
	if (name.value == "" || pernum1.value == "" || pernum2.value == ""
	|| pw.value == "" || pw.value == "") {
		
		alert("*로 표시된 곳은 필수로 입력해야 합니다.");
			return false;
	}

	if (document.fr.id.length <= 4) {
		alert("아이디는 4글자 이상 입력해 주세요");
		document.fr.id.focus();
	}
	if (document.fr.addrnum.value.indexOf('-') == -1) {
		alert("우편번호는 - 를 포함해 작성해 주세요");
		document.fr.addrnum.focus();
	}
	if (document.fr.phone.value.indexOf('-') == -1) {
		alert("전화번호는 - 를 포함해 작성해 주세요");
		document.fr.addrnum.focus();
	}
	if (!pw.value.equals(pwcheck.value)) {
		alert("비밀번호가 일치하지 않습니다.");
		document.fr.pw.focus();
	}
}

function checkemail() {
	if (document.fr.selectEmail.value == '1') {
		document.fr.email2.readOnly = false;
		document.fr.email2.value = '';
		document.fr.email2.focus();
	}
	else {
		document.fr.email2.readOnly = true;
		document.fr.email2.value = document.fr.selectEmail.value;
	}
}

