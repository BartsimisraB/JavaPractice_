function checkform() {
	var fr = document.getElementsByTagName("form");
	var name = document.getElementsByName("name");
	var pernum1 = document.getElementsByName("pernum1");
	var pernum2 = document.getElementsByName("pernum2");
	var id = document.getElementsByName("id");
	var pw = document.getElementsByName("pw");
	var pwch = document.getElementsByName("pwcheck");
	var email1 = document.getElementsByName("email1");
	var email2 = document.getElementsByName("email2");
	var addrnum = document.getElementsByName("addrnum");
	var addr1 = document.getElementsByName("addr1");
	var addr2 = document.getElementsByName("addr2");
	var phone = document.getElementsByName("phone");
	
	
	if ((name.value == null || name.length == 0)
		&& (pernum.value == null || pernum.length == 0)
		&& (id.value == null || id.length == 0)
		&& (pw.value == null || pw.length == 0)
		&& (pwcheck.value == null || pwcheck.length == 0)) {
			
		alert("*로 표시된 곳은 필수로 입력해야 합니다.");
	}

	if (id.length < 4) {
		alert("아이디는 4글자 이상 입력해 주세요");
	}
	if (!pw.value.equals(pwcheck.value)) {
		alert("비밀번호가 일치하지 않습니다.");
	}
	if (addrnum.value.indexOf('-') == -1) {
		alert("우편번호는 - 를 포함해 작성해 주세요");
	}
	if (phone.value.indexOf('-') == -1) {
		alert("전화번호는 - 를 포함해 작성해 주세요");
	}
	if ((name.value != null || name.innerText.length != 0)
		&& (pernum.value != null || pernum.innerText.length != 0)
		&& (id.value != null || id.innerText.length != 0)
		&& (pw.value != null || pw.innerText.length != 0)
		&& (pwcheck.value != null || pwcheck.innerText.length != 0)
		&& (email1.value != null || email1.innerText.length != 0)
		&& (email2.value != null || email2.innerText.length != 0)
		&& (addrnum.value != null || addrnum.innerText.length != 0)
		&& (addr1.value != null || addr1.innerText.length != 0)
		&& (addr2.value != null || addr2.innerText.length != 0)
		&& (phone.value != null || phone.length != 0)) {

		document.fr.submit();
	}
}

function checkemail() {
	if (document.fr.selectEmail.value == '1') {
		document.fr.email2.readOnly = false;
		document.fr.email2.value = '';
		document.fr.email2.focus();
	}
	else {
		document.fr.email2.readOnly = true;
		document.fr.email2.value = document.fr.selectEmail.value;
	}
}

