package Book;

public class Page_2_123_4 {
	public static void main(String[] args) {
// 4.		
		for (int i = 0; i < 4; i++) {

			for (int k = 4; k > i; k--) {
				System.out.print(" ");
			}
			for (int j = 0; j < i * 2 + 1; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		// 5.
		for (int i = 0; i < 4; i++) {

			for (int k = 4; k > i; k--) {
				System.out.print(" ");
			}
			for (int j = 0; j < i * 2 + 1; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		for (int i = 0; i < 3; i++) {
			
			for(int k = 0; k <= i+1; k++) {
				System.out.print(" ");
			}
			for(int j = 4; j > i*2+1; j--) {
				System.out.print("*");
			}
		System.out.println();
		}
	}
}
