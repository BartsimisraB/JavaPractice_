<%@ page contentType="text/html; charset=UTF-8" import="bean.MemberDAO" %>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
<%
	request.setCharacterEncoding("utf-8");
	//취미 부분은 별도로 읽어들여 다시 빈 클래스에 저장
	String hobby[] = request.getParameterValues("hobby");
	//배열에 있는 내용을 하나의 스트링으로 저장
	String hob = "";
	
	for(String h : hobby){
		hob += hobby + " ";
	}
%>
	<jsp:useBean id="beans" class="bean.MemberBean">
		<jsp:setProperty name="beans" property="*"/>
	</jsp:useBean>
	
<%
	beans.setHobby("hob");
	
	MemberDAO mdao = new MemberDAO();
	mdao.insertMember(beans);
	
	//회원 가입이 되었다면 회원 정보를 보여주는 페이지로 이동시켜라
	response.sendRedirect("MemberArray.jsp");
%>

</body>
</html>